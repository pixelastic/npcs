extends /_includes/_layouts/core

block config
  - pageTitle = "Add your own face"
  //- - pageDescription = "Custom description"
  //- see also: pageAuthor, pageImage, pageTwitter, pageUrl

block content
  .container.mx-auto.pt-3#addPage
    //- We need an img and canvas tags offscreen to properly resize the image
    //- before submitting it to the API
    .invisible.absolute.-left-100p
      img(id="tmpImage")
      canvas(id="tmpCanvas")

    .bg-gray-2.rounded.shadow.p-2
      .text-8 Add your face
      .lh-6
        p 
          | Fill the form below to add your own face to the collection.
          | It will create a #[a.blue.hover_underline(href="https://github.com/pixelastic/npcs/pulls") Pull Request] on the repo.


      #addForm.flcnw(data-step="initial")
        .fln.flrnw.py-1.text-3
          .__previewPicker.fln.flrnw.flc
            input.hidden(type="file" id="pictureUpload" name="pictureUpload")
            label.bg-orange-7.white.rounded-2.shadow.px-1.py-01.text-5.hover_bg-orange-6.pointer(for="pictureUpload") Pick a file

          .__previewDisplay.flrnw.fln
            p Pick one of the following generated images:
            .fln
              .border-double.border-gray.border-01.relative
                img.h-11.w-11.z-1.relative(id="picturePreview")
                .absolute.top-0.left-0.z-0.h-11.w-11.flrnw.flc.bg-gray
                  .spinner

            - let n = 0;
            while n < 4
              - n++
              .fln.ml-3
                .border-double.border-yellow-8.border-01.relative
                  img.h-11.w-11.z-1.relative(id=`portraitPreview${n}`)
                  .absolute.top-0.left-0.z-0.h-11.w-11.flrnw.flc.bg-yellow-8
                    .spinner

        .__addUsername.fln.flrnw.py-1.text-3
          .fln.w-12.flrnw.flrar
            label.flrnw.flrcv GitHub username:
          .fln.pl-2
            input.h-6.border-001.border-gray.rounded.px-01.shadow-inset


        .__addSubmit.fln.ml-12.pl-2
            button.bg-blue.white.rounded-2.shadow.border-blue-5.border-001.px-1.py-01.text-5.hover_bg-blue-5.pointer Submit
